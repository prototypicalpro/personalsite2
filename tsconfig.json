{
    "compilerOptions": {
        "module": "es2020",
        "moduleResolution": "node",
        "target": "es2019",
        "sourceMap": true,
        "lib": [
            "es2019",
            "dom"
        ],
        "baseUrl": "./",
        // Gives error if there are implied "<any>" types.
        "noImplicitAny": true,
        // Allows you to access non-constant properties, such as object[keyVar]
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "node_modules"
    ]
}
